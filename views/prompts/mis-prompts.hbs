{{#if prompts}}

  <h2>Mis prompts</h2>

  {{#each prompts}}
    <div class="prompts">
      <h3>{{tag}}</h3>
      <p>{{definition}}</p>
      <a href="/ask/{{id}}" class="promptPalButtonPrompts">Consultar</a>
      <a
        href="/prompts/{{id}}/queries"
        class="promptPalButtonPrompts"
      >Consultas</a>
      <a href="/prompts/{{id}}/edit" class="promptPalButtonPrompts">Editar</a>
      {{#if prompts._id === req.userInSession.id}}
      <form action="/prompts/{{prompt._id}}/delete" method="post">
    <button class="promptPalButtonPrompts">Eliminar</button>
  </form>
  {{/if}}
    </div>
  {{/each}}

{{else}}

