<div class="form">

  <form action="/edit-profile" method="POST" enctype="multipart/form-data">
    <h2>Editar cuenta</h2>
    <label>
      Usuario:
      <input type="text" name="username" placeholder="Your username" value="{{username}}" />
    </label>

    <label>
      Email:
      <input type="email" name="email" placeholder="Your email" value="{{email}}" />
    </label>

    <label>
      Contrase√±a:
      <input type="password" name="password" placeholder="Your password" value="{{password}}" />
    </label>

    <label for="profilePic">Imagen de perfil:</label>
    <img src="{{profilePic}}" alt="" />
    <input type="text" name="profilePicOld" value="{{profilePic}}" style="display:none" />
    <input type="file" id="profilePic" name="profilePic" />

    <label>
      Sector:
      <input type="text" name="industry" placeholder="Your industry" value="{{industry}}" />
    </label>

    <button type="submit" class="promptPalButton">Editar</button>

  </form>
  {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}
</div>