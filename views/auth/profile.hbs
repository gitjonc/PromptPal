{{#if userInSession}}
  <h1 class="auth">Este es tu espacio {{userInSession.username}}</h1>
  <p>Esta es tu página de usuario
    {{userInSession.username}}, donde te has registrado con el email
    {{userInSession.email}}.</p>

  <div style="width:100%;height:0;padding-bottom:56%;position:relative;"><iframe
      src="https://giphy.com/embed/3oz8xDLuiN1GcDA3xC"
      width="100%"
      height="100%"
      style="position:absolute"
      frameBorder="0"
      class="giphy-embed"
      allowFullScreen
    ></iframe></div><p><a
      href="https://giphy.com/gifs/landonmoss-landon-moss-3oz8xDLuiN1GcDA3xC"
    ></a></p>

  <div class="profile">
    <h3>Para ver todos los prompts, <a href="/prompts">haz click aquí</a></h3>

  </div>

{{else}}

  <br /><p>¡Debes iniciar sesión para acceder a tu perfil!</p>

  <div id="login-form">
    <h2>Log In</h2>
    <form action="/log-in" method="POST">

      <label>
        Email
        <input type="email" name="email" placeholder="Email" />
      </label>

      <label>
        Contraseña
        <input type="password" name="password" placeholder="Contraseña" />
      </label>

      <button type="submit" class="button">Iniciar sesión</button>

      {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
      {{/if}}
    </form>
  </div>

{{/if}}