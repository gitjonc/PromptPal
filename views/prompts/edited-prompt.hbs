<form action="/prompts/{{promptToEdit._id}}/edit" method="post">

  <div class="prompts">
    <h3>TAG</h3>
    <input
      type="text"
      name="tag"
      value="{{promptToEdit.tag}}"
      class="prompts"
    />

  </div>
  <div class="promptsEdit">
    <textarea
      class="definitionEdit"
      name="definition"
      cols="30"
      rows="10"
    >{{promptToEdit.definition}}</textarea>

  </div>

  <div class="flex">
    <button type="submit" class="promptPalButton">Guardar</button>
  </div>
</form>