<div class="promptsTitle">
  <h2 class="title">Encuentra tu prompt adecuado para obtener la mejor respuesta</h2>
</div>
<div class="search">
  <form action="/prompts" method="POST">
    <label for="tags">Tags:</label>
    <select name="tag" id="tags">
      {{#each tags}}
        <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
    <button type="submit">Filtrar</button>
  </form>
</div>

<div class="prompts">

  {{#each prompts}}

    <div id="prompt">
      <h3 class="tags">{{tag}}</h3>
      <div class="promptsDimensions">
        <p class="twoHundred-chars">{{definition}}</p>
        <div>
          <button class="bin"><a href="/prompts/{{_id}}"><img
                src="/images/searchIcon.png"
              /></a></button></div>
      </div>

    </div>
  {{/each}}
</div>