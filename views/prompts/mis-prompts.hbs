<div class="centerFlexTitle"><h2 class="h2">Mis prompts</h2>
<a href="/prompts/create"><button class="createPromptButton">Crear prompt</button></a>

  {{#if prompts}}

    <form action="/prompts/mis-prompts" method="POST">
      <select name="tag" id="tags" class="greyInput">
        <option value="null">Todos</option>
        {{#each tags}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
      <button type="submit" class="blueButton">Filtrar</button>
      <select name="sortByDate" id="sortByDate" class="greyInput">
        <option value="1">Ascendente</option>
        <option value="-1">Descendente</option>
      </select>
      <button type="submit" class="blueButton">Filtrar</button>
    </form>
    </div>

    <div class="centerFlexWrap">

    {{#each prompts}}
      <div id="prompt">
        <h3 class="tags">{{tag}}</h3>

        <p class="fifty-chars">{{definition}}</p>

        <div class="flex bin">

          {{!-- <button class="greenButtonPrompt button"><a
              href="#pop-up"
            >Ver</a></button> --}}
          <button class="blueButtonPrompt"><a
              href="/ask/{{_id}}"
            >Consultar</a></button>
          <button class="blueButtonPrompt"><a
              href="/prompts/{{_id}}/edit"
            >Editar</a></button>
          <a href="/prompts/{{_id}}/delete"><img src="/images/delete.png" /></a>

        </div>
      </div>

      <div id="pop-up" class="overlay">
        <div class="popup">
          <h3 class="tags">{{this.tag}}</h3>
          <a class="close" href="#">&times;</a>
          <div class="content">
            {{this.definition}}
            <div>

              <button class="blueButtonPrompt"><a
                  href="/prompts/{{_id}}/edit"
                >Utilizar</a></button>
            </div>

          </div>
        </div>
      </div>

    {{/each}}

  {{else}}

    <h3>¿Todavía no has creado ni utilizado ningún prompt?</h3>

    <p>Utiliza tu primer prompt
      <a href="/prompts"><button class="promptPalCreateButton">Buscar prompt</button></a><br
      /><br />
      o créalo desde cero
      <a href="/prompts/create"><button class="promptPalCreateButton">Crear
          prompt</button></a></p>

  {{/if}}
</div>
