<div id="login">
  <div id="left">
    <img src="/images/PromptPal-logo-negativo.png" />
    <div>
      <h3>¿Ya tienes cuenta?</h3>
      <p>Accede a tu cuenta ahora mismo.</p>
      <button class="whiteButton"><a href="/log-in">Iniciar sesión</a></button>
    </div>

  </div>

  <div id="right">
    
    <form action="/sign-up" method="POST" enctype="multipart/form-data">
    <h2>Crear cuenta</h2>
      <label for="username">Usuario:</label>
      <input required type="text" name="username" placeholder="Tu usuario" />
      <label for="email">Email:</label>
    <input required type="email" name="email" placeholder="Tu email" />

    <label for="password">Contraseña:</label>
    <input
      required
      type="password"
      name="password"
      placeholder="Tu contraseña"
    />

    <label for="profilePic">Imagen de perfil:</label>
    <input required type="file" id="profilePic" name="profilePic" />

    <label for="industry">Sector:</label>
    <input type="text" name="industry" placeholder="Tu sector (opcional)" />

    <button type="submit" class="blueButton">Crear cuenta</button>

  </form>
  {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}
</div>